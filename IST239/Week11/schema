SELECT * from assignment where max_grade >= 50 and type = 'T';

SELECT student.first_name, student.last_name, grade_book.score 
FROM student, grade_book 
WHERE student.id = grade_book.student_id and grade_book.score > 10;

select count(*) as number_of_students from student ;
select cur_date();


